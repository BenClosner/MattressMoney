<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/list_item_LL"
              android:background="@color/grey"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/list_item_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="25dp"
        android:text="(TICKER)"
        android:gravity="left"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/list_item_fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:scrollHorizontally="false"
        android:layout_weight="3"
        android:text="Full Company Name" />

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@mipmap/green_up_arrow"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/list_item_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_weight="1"
            android:text="0000.00" />

        <TextView
            android:id="@+id/list_item_changeflat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_weight="1"
            android:text="+-00.00" />

        <TextView
            android:id="@+id/list_item_changepercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_weight="1"
            android:text="+-00.00%" />

    </LinearLayout>
</LinearLayout>